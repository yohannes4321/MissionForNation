# Auth
BETTER_AUTH_SECRET="your-better-auth-secret"
BETTER_AUTH_URL="http://localhost:3000"

# Optional: auto-promote this email to super_admin in the active organization after login
SUPER_ADMIN_EMAIL="yohannes.alemu@a2sv.org"

# Public app URL (used in email links / invitations)
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# DB
DATABASE_URL="postgres://postgres:postgres@localhost:5432/better_auth"

# Email (SMTP via Nodemailer) - required only if you want email verification + reset + invitation emails
# Provide your SMTP server credentials (Gmail/Google Workspace typically requires an App Password).
SMTP_HOST="smtp.example.com"
SMTP_PORT="587"
SMTP_SECURE="false" # true for port 465, false for 587/STARTTLS
SMTP_USER="user@example.com"
SMTP_PASS="your-smtp-password"

# Sender address shown in the email
SMTP_FROM="Better Auth Starter <no-reply@example.com>"

