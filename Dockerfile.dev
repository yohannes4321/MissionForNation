# Development Dockerfile for running Next.js in Docker with hot reload
FROM node:20-alpine

WORKDIR /app

# pnpm via Corepack
RUN corepack enable

# Install deps (cached layer)
COPY package.json pnpm-lock.yaml ./
RUN pnpm install --no-frozen-lockfile

EXPOSE 3000

# Source is bind-mounted in docker-compose for dev
CMD ["pnpm","exec","next","dev","--turbopack","--hostname","0.0.0.0","--port","3000"]
